<% include partials/header %>
<div class="jonquil">
<div class="jumbotron pacificdream">
	<center><a href="/questions" class="button btn btn-info btn-lg">Go back to Questions</a> 	
	<h1 class="container"><%= question.questiontag %></h1></center>

</div>
<div class="container">
	<header class="page-header special">
	  <h3><%= question.description %></h3>
	</header>
	<br><br>
	<% if (question.image!=undefined){ %>
		<div>
			<img src="<%= question.image %>" class="img-rounded img-responsive">
		</div>
		<br><br>
	<% } %>	
	<% if (question.audio!=undefined){ %>
		<div>
			<audio controls>
				<source src="<%= question.audio %>" type="audio/mpeg">
				Your browser does not support the audio element.
			</audio>
		</div>
		<br><br>
	<% } %>
	<% if (question.video!=undefined){ %>
		<div class="embed-responsive embed-responsive-16by9">
		  <iframe width="560" height="315" class="embed-responsive-item" src="<%= question.video %>" allowfullscreen></iframe>
		</div>
		<br><br>
	<% } %>
	<% var s = currentUser.score; %>
	<% var len= s.length; %>
	<% var a = s.indexOf(question._id); %>
	<% if(len!=0 && a!=-1){ %>
	<div class="col-lg-12 col-sm-12">
		<a href="/questions" class="btn btn-success btn-lg btn-block"> Solved / Go back</a>
	</div>
	<% } %>
	<% if (a==-1 || len==0){ %>
	<form action="/questions/<%= question._id %>" method="POST" class="form-horizontal">
		<div class="form-group form-group-lg has-success">
		    <label for="ans" class="col-lg-1 col-sm-1 control-label">Answer:</label>
		    <div class="col-lg-11 col-sm-10">
		      <input type="text" class="form-control" id="answer" name="ans" placeholder="Answer">
		    </div>
		</div>
		<div class="row container">
		<div class="form-group form-group-lg" >
		<center>
			<button type="submit" class="button btn btn-primary btn-lg" style="margin-bottom: 10px;">Submit</button>
		</center>
		</div>
		</div>
	</form>
	<% } %>
</div>
</div>
<% include partials/footer %>