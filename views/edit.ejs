<% include partials/header %>

<div class="container">
	<h1 class="text-center"> Edit <%= question.questiontag %> </h1>
	<form class="form-horizontal" action="/questions/<%= question._id %>?_method=PUT" method="POST">
	  <div class="form-group">
	    <label for="qtag" class="col-sm-2 control-label"> Question Tag </label>
	    	<div class="col-sm-10">
	      		<input type="text" class="form-control" id="qtag" name="questiontag" placeholder="Add question tag here" value="<%= question.questiontag %>" required="true">
	    	</div>
	  </div>
	  <div class="form-group">
	    <label for="imgtag" class="col-sm-2 control-label"> Image Tag </label>
	    <div class="col-sm-10">
	      <input type="text" class="form-control" id="imgtag" name="imagetag" placeholder="Add imagetag here" value="<%= question.imagetag %>">
	    </div>
	  </div>
	  
	  <div class="form-group">
	    <label for="desc" class="col-sm-2 control-label"> Description </label>
	    <div class="col-sm-10">
	      <textarea class="form-control" rows="5" id="desc" name="description" placeholder="Add description here" required="true"><%= question.description %></textarea>	
	    </div>
	  </div>
	  <div class="form-group">
	    <div class="col-sm-offset-2 col-sm-10">
	      <div class="checkbox">
	        <label class="checkbox-inline">
  				<input type="checkbox" id="Checkbox1" value="option1"> Image
			</label>
			<label class="checkbox-inline">
			  <input type="checkbox" id="Checkbox2" value="option2"> Audio
			</label>
			<label class="checkbox-inline">
			  <input type="checkbox" id="Checkbox3" value="option3"> Video
			</label>
	      </div>
	    </div>
	  </div>
	  <script>
	  	document.getElementById("Checkbox1").onchange = function() {
	     if(this.checked) {
	         document.getElementById("img").disabled = false;
	     }
	     else{
	     	document.getElementById("img").disabled = true;
	     }
		};
		document.getElementById("Checkbox2").onchange = function() {
	     if(this.checked) {
	         document.getElementById("aud").disabled = false;
	     }
	     else{
	     	document.getElementById("aud").disabled = true;
	     }
		};
		document.getElementById("Checkbox3").onchange = function() {
	     if(this.checked) {
	         document.getElementById("vid").disabled = false;
	     }
	     else{
	     	document.getElementById("vid").disabled = true;
	     }
		};
		</script>
	  <div class="form-group">
	    <label for="img" class="col-sm-2 control-label" onchange="handler.call(this)"> Image </label>
	    <div class="col-sm-10">
	      <input type="text" class="form-control" id="img" name="image" placeholder="Add image here" disabled value="<%= question.image %>">
	    </div>
	  </div>
	  
	  <div class="form-group">
	    <label for="aud" class="col-sm-2 control-label" onchange="handler.call(this)"> Audio </label>
	    <div class="col-sm-10">
	      <input type="text" class="form-control" id="aud" name="audio" placeholder="Add audio here" disabled value="<%= question.audio %>">
	    </div>
	  </div>
	  
	  <div class="form-group">
	    <label for="vid" class="col-sm-2 control-label" onchange="handler.call(this)"> Video </label>
	    <div class="col-sm-10">
	      <input type="text" class="form-control" id="vid" name="video" placeholder="Add video here" disabled value="<%= question.video %>">
	    </div>
	  </div>
	  
	  <div class="form-group form-group-lg has-success">
	    <label for="ans" class="col-sm-2 control-label"> Answer </label>
	    <div class="col-sm-10">
	      <input type="text" class="form-control" id="ans" name="answer" placeholder="Add answer here" value="<%= question.answer %>" required="true">
	    </div>
	  </div>
	  
	  <div class="form-group">
	    <div class="col-sm-offset-2 col-sm-10">
	      <button type="submit" class="btn btn-lg btn-primary btn-block"> Submit Your Question </button>
	    </div>
	  </div>
	</form>
	<form action="/questions/<%= question._id %>?_method=DELETE" method="POST">
	<div class="form-group">
	    <div class="col-sm-offset-2 col-sm-10">
	      <button type="submit" class="btn btn-lg btn-danger btn-block"> DELETE </button>
	    </div>
	  </div>
	 </form>
</div>

<% include partials/footer %>